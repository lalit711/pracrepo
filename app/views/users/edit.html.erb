<h2> Edit the user </h2>

<%= form_with model:@user, method: :patch,local:true do |f|%>

<%= f.label :name %>
<%= f.text_field :name %> <br> <br>
<%= f.label :age %>
<%= f.text_field :age %> <br> <br>
<%= f.label :bio %>
<%= f.text_field :bio %> <br> <br>
<%= f.label :mail %>
<%= f.email_field :mail %> <br> <br>    

<%= f.label :gender %>
<%= f.select :gender, options_for_select(['Male', 'Female']) %>

<select name="user[role]">
  <option value="admin">Admin</option>
  <option value="editor">Editor</option>
  <option value="editor">CLIENT </option>
</select>


<%= select_tag "user[role]", options_for_select([["Admin", "admin"], ["Editor", "editor"]]) %>
<%= f.collection_select :category, User.all, :id, :name, prompt: "Select a user" %>

<%= f.submit "Submit the details" %>






<%end%>